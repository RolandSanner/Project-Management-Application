<script>
  //import contractorService from './../services/contractorService'

  export default {
  name: "new-contractor",
  components: {
    
  },
  data() {
      return {
        contractor: {
          companyName: '',
          email: '',
          phone: '',
          address: '',
          industry: ''
        }
      }
    },
   methods: {
    saveDocument() {
      contractorService.create(this.Contractor)
                     .then(response => {
                       if(response.status === 201){
                         this.$router.push("/")
                       }
                     })
                     .catch(error => {
                       console.error(error)
                     })
    },
    cancel() {
      this.$router.push('/')
    }
   }
  };
</script>

